{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Dir command",
            "type": "shell",
            "command": "direc",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "revealProblems": "always"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "(.*)",
                    "file": 1,
                    "line": 1,
                    "severity": 4,
                    "message": 1
                }
            }
        }
    ]
}